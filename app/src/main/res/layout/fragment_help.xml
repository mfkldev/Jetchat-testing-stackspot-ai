<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.compose.jetchat.customview.MfklHeaderCustomView
        android:id="@+id/mfklHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.example.compose.jetchat.customview.MfklBodyCustomView
        android:id="@+id/mfklBodyView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/mfklHeaderView"
        app:layout_constraintBottom_toTopOf="@id/mfklFooterView"/>

    <com.example.compose.jetchat.customview.MfklBottomCustomView
        android:id="@+id/mfklFooterView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
